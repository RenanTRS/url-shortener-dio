{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./src",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@middlewares/*": ["./src/middlewares/*"],
      "@repositories/*": ["./src/repositories/*"],
      "@use-cases/*": ["./src/use-cases/*"]
    }
  },
  "include": ["src/**/*"]
}
